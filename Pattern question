#include <stdio.h>

int main() {
    int n = 7;
    int mid = n / 2;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j == 0 || (i == mid) || (i + j == mid) || (i - j == mid)) {
                printf("X ");
            } else {
                printf("  ");
            }
        }
        printf("\n");
    }
    return 0;
}
